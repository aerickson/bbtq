#!/usr/bin/env python3

import argparse
import sys

import btq

if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    parser.add_argument("filter")
    parser.add_argument(
        "file", nargs="?", type=argparse.FileType("r"), default=sys.stdin
    )
    args = parser.parse_args()

    btq.main(args.file, args.filter)
